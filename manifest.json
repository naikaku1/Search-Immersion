{
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "name": "Search Immersion",
  "version": "1.1.0",
  "description": "新しいタブを『スマートディスプレイ』に変える拡張機能。天気、カレンダー、音楽、ToDoを美しく表示。透明感あるグラスから懐かしのドット絵まで、没入感のあるテーマ切り替えに対応した高機能ダッシュボードです。",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "history",
    "search"
  ],
  "host_permissions": [
    "https://calendar.google.com/*",
    "https://geocoding-api.open-meteo.com/*",
    "https://api.open-meteo.com/*",
    "https://lrclib.net/*",
    "*://www.youtube.com/*",
    "*://music.youtube.com/*",
    "https://open.spotify.com/*",
    "*://*.icloud.com/*",
    "https://www.google.com/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "wallpapers/*.webp"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}